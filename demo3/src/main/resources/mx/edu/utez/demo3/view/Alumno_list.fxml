<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mx.edu.utez.demo3.controller.AlumnoListController"
            prefHeight="400.0" prefWidth="600.0"  stylesheets="@../css/alumno_list.css">

    <top>
        <HBox fx:id="navbar" styleClass="navbar" spacing="10">
            <Button fx:id="btnBack" text="IR A DASHBOARD" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <Button fx:id="btnCreate" text="CREAR ALUMNO"  onAction="#onCrearAlumnos" styleClass="nav-btn"/>
            <TableView fx:id="tableAlumnos" prefWidth="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNombres" text="Nombres" prefWidth="120"/>
                    <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="120"/>
                    <TableColumn fx:id="colFecha" text="Fecha Nacimiento" prefWidth="120"/>
                    <TableColumn fx:id="colCorreo" text="Correo" prefWidth="120"/>
                    <TableColumn fx:id="colCarrera" text="Carrera" prefWidth="120"/>
                    <TableColumn fx:id="colAsignaturas" text="Asignaturas" prefWidth="120"/>
                    <TableColumn fx:id="colAcciones" text="" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
